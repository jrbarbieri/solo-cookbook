
<% @recipes.each do |recipe| %>
  <%= link_to recipe do %>
    <div class="quadro">
      <h1 align="center"><%= recipe.tittle %></h1>
      <ul>
        <li>Tipo de receita: <%= recipe.recipe_type.name %></li>
        <li>Cozinha: <%= recipe.cuisine %></li>
        <li>Dificuldade: <%= recipe.difficulty %></li>
        <li>Cozimento: <%= recipe.cook_time_min %></li>
      </ul>
    </div>
  <% end %>
<% end %>